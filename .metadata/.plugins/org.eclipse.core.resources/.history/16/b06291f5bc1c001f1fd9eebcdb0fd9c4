package com.techlabs.test;

import java.util.Scanner;

import com.techlabs.model.InputValidator;

public class InputValidatorTest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		InputValidator Validate= new InputValidator();
		Scanner input=new Scanner(System.in);
		
		System.out.println("Enter Username:");
		String UserName=input.nextLine();
		System.out.println("Username validation result: "+ Validate.validateUsername(UserName));

		System.out.println("Enter a password:");
	    String password = input.nextLine();
	    System.out.println("Password validation result: " + Validate.validatePassword(password));

	       
	    System.out.println("Enter an email:");
	    String email = input.nextLine();
	    System.out.println("Email validation result: " + Validate.validateEmail(email));
	}

}